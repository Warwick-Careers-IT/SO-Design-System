
{% macro pagination_next(config) %}

<nav class="scs-guide-pagination" role="navigation" aria-label="Pagination">
  <ul class="scs-guide-pagination__list" data-module="track-click">
      <li class="scs-guide-pagination__item scs-guide-pagination__item--next">

        <a href="{{ config.href }}" class="scs-guide-pagination__link" rel="next" >
          <span class="scs-guide-pagination__link-title">
            <svg class="scs-guide-pagination__link-icon" xmlns="http://www.w3.org/2000/svg" height="13" width="17" viewBox="0 0 17 13">
              <path fill="currentColor" d="m10.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
            </svg>
            <span class="scs-guide-pagination__link-text">
              Next
            </span>
          </span>
            <span class="scs-guide-pagination__link-divider visually-hidden">:</span>
            <span class="scs-guide-pagination__link-label">  {{ config.text }} </span>
        </a>

      </li>
  </ul>
</nav>
{% endmacro %}

{% macro pagination_previous(config) %}
<nav class="scs-guide-pagination" role="navigation" aria-label="Pagination">
  <ul class="scs-guide-pagination__list" data-module="track-click">
    <li class="scs-guide-pagination__item scs-guide-pagination__item--previous">
      <a href="{{ config.href }} " class="scs-guide-pagination__link" rel="prev">
        <span class="scs-guide-pagination__link-title">
          <svg class="scs-guide-pagination__link-icon" xmlns="http://www.w3.org/2000/svg" height="13" width="17" viewBox="0 0 17 13">
            <path fill="currentColor" d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
          </svg>
          <span class="scs-guide-pagination__link-text">
            Previous
          </span>
        </span>
          <span class="scs-guide-pagination__link-divider visually-hidden">:</span>
          <span class="scs-guide-pagination__link-label">{{ config.text }}</span>
      </a>
    </li>
  </ul>
</nav>

{% endmacro %}
