<script>
jQuery(document).ready(function ($) {
   var url = "https://warwick.ac.uk";
        $('.ch-item').each(function() {
            var url = $(this).find('a').attr('href');
            var element = $(this).find('.ch-itemDescription')
            $('<a/>', {
            'class': 'btn btn-brand-primary',
            'text': 'Book Event',
            'href' : url
        }).appendTo(element);


    }) 

   $('<a/>', {
    'class':'btn btn-brand-secondary__outlined feedtoggle',
    'text':'Show Detail',
}).on('click', function(){
    var text = $(this).text();
    $( ".ch-enddate, .ch-venue , .ch-places , .ch-startdate" ).toggle();
    $('a.feedtoggle').text(
        text == "Show Detail" ? "Hide Detail" : "Show Detail");
}).appendTo('div.ch-itemDescription');
});
</script>
